<h2>Hola {{persona}}</h2>
<div class="secciones"><button class="seccion"> <a class="link" href="login/logout">Salir <i
                class="fa-solid fa-arrow-right-from-bracket"></i></a> </button></div>
<h2>Artículos</h2>
 <form action="/admin/editar" method="get" class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}value="{{q}}"{{/if}}>
        <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
      <br>
      <br>
 <div >
      <a href=" /admin/editar/agregar" class="boton link seccion">Nuevo <i class="fa-solid fa-plus"></i></a>
    </div>
    <br>
    <br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Título</th>
      <th scope="col">Subtitulo</th>
      <th scope="col">Resumen</th>
     
    </tr>
  </thead>
  <tbody>
      {{#each articulos}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{titulo}}</td>
      <td>{{subtitulo}}</td>
      <td>{{resumen}}</td>
      <td class="text-end"><a href="/admin/editar/modificar/{{id}}" class="btn btn-secondary"><i class="fa-solid fa-pencil"></i></a>
                <a href="/admin/editar/eliminar/{{id}}" class="btn btn-secondary"><i class="fa-solid fa-trash-can"></i></a>
    </tr>
    {{/each}}
    
  </tbody>
   </table>
        {{#if is_search}}
        {{#unless articulos.length}}
        <p>No se encontraron resultados para <b>{{q}}</b></p>
        {{/unless}}
        {{/if}}
</table>

