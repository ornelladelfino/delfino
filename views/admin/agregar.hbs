<div class="container margenes">
    <div class="row">
        <div class="col">
            <h2>Agregar un nuevo artículo</h2>
            <br>
            <br>
            <form action="/admin/editar/agregar" method="post">
                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="titulo">
                </div>
                <div class="mb-3">
                    <label class="form-label">Subtítulo</label>
                   <textarea class="form-control" name="subtitulo" rows="3"></textarea>
                </div>
                 <div class="mb-3">
                    <label class="form-label">Resumen</label>
                   <textarea class="form-control" name="resumen" rows="10"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Cuerpo</label>
                   <textarea class="form-control" name="cuerpo" rows="10"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Autor</label>
                   <textarea class="form-control" name="autor" rows="10"></textarea>
                </div>
                <button type="submit" class="boton">Guardar</button>
            </form>
           {{#if error}}
           <p>{{message}}</p>
           {{/if}}
        </div>
    </div>
</div>