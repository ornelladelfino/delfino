<div class="container margenes">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="mb-3">
                    <label class="form-label">Usuario</label>
                    <input type="text" class="input"  placeholder="" name="usuario">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Contraseña</label>
                    <input type="password" class="input" placeholder="" name="password">
                </div>
                <button type="submit" class="boton">Ingresar</button>
            </form>
            {{#if error}}
            <p>Usuario y/o contraseña incorrectos</p>
            {{/if}}
        </div>
    </div>
</div>